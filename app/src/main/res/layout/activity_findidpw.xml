<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:orientation =  "vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID 찾기"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/findID_tv_find_id_pw"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/Email1_et_find_id_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail을 입력하세요"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_weight="2"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_weight="3">
        </LinearLayout>

        <ImageButton
            android:background="#00000000"
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkid_find_id_pw"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:src="@drawable/checkid_state"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_weight="4">
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/findPW_tv_find_id_pw"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/Email2_et_find_id_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail을 입력하세요"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_weight="2"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/ID_et_find_id_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID를 입력하세요"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_weight="2"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_weight="3">
        </LinearLayout>

        <ImageButton
            android:background="#00000000"
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/PW_find_id_pw"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:src="@drawable/checkpw_state"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_weight="3">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
